            transform: scale(1.05);
            background-color: #3b82f6;
            color: white;
        }
        
        /* Simple animation for card hover */
        .hover-card {
            transition: all 0.3s ease;
        }
        
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
